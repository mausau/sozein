---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import StaffList from "../components/Sections/StaffList.astro";
---

<BaseLayout
  title="Nuestro equipo - Iglesia Sozein"
  description="Conoce nuestro equipo y liderazgo quienes sirven a nuestra congregación con pasión y entrega."
>
  <PageHeader 
    title="Nuestro equipo" 
    subtitle="Conozca a nuestro dedicado equipo de liderazgo"
    backgroundImage="/uploads/page-header-bg.webp"
  />
  
  <!-- Staff List -->
  <StaffList />
  
  <!-- Contact Staff CTA -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Nuestro equipo de liderazgo</h2>
        <p class="text-xl text-gray-600 mb-8">
          Conozca a las personas dedicadas que lideran y sirven a nuestra comunidad eclesial.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <a 
            href="/contacto" 
            class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-white bg-pink-500 rounded-md shadow-sm hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          >
            Contactános
          </a>
          
          <a 
            href="/quienes-somos" 
            class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          >
          Conoce mas acerca de nuestra Iglesia.
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>